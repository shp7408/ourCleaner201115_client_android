<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/shadow"
            android:paddingVertical="10dp"
            android:paddingHorizontal="20dp"
            android:gravity="center_vertical"

            >

            <ImageView
                android:id="@+id/whoSendImgView"
                android:layout_width="50dp"
                android:layout_height="50dp" />



            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:padding="10dp"
                >

                <TextView
                    android:id="@+id/whoSendTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="박서현 고객님"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:padding="5dp"/>


                <TextView
                    android:id="@+id/whatSendTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="안녕하세요."
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingVertical="10dp"

                >

                <TextView
                    android:id="@+id/whenSendTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="오후 3:00"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:paddingVertical="8dp"/>


                <TextView
                    android:id="@+id/unreadTxt"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/background_alarm"
                    android:textColor="@color/white"
                    android:text="3"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />
            </LinearLayout>




        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
