                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_marginEnd="5dp"
                            android:background="@drawable/bordercircle60"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:text="반포 2동" />

                        <Button
