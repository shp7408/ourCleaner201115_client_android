                            android:layout_height="35dp"
                            android:layout_marginEnd="5dp"
                            android:background="@drawable/bordercircle60"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:text="신림동" />


                    </LinearLayout>


